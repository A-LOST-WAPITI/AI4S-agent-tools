apiVersion: v1
kind: Secret
metadata:
  name: {{ name }}-credentials
  namespace: deepmodeling
type: Opaque
data:
  # API 配置 (可选)
  # AZURE_API_KEY: <base64-encoded-value>
  # AZURE_API_BASE: <base64-encoded-value>
  # AZURE_API_VERSION: <base64-encoded-value>
  
  # 数据库配置 (可选)
  # DB_URL: <base64-encoded-value>
  # DB_USERNAME: <base64-encoded-value>
  # DB_PASSWORD: <base64-encoded-value>
  
  # 服务配置 (可选)
  # SERVICE_TOKEN: <base64-encoded-value>
  # API_KEY: <base64-encoded-value>
  
  # 示例: 要启用某个配置，取消注释并填入 base64 编码的值
  # API_KEY: bXlfc2VjcmV0X2FwaV9rZXk= 